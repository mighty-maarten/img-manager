{
    "name": "@img-manager/api",
    "version": "1.0.0",
    "author": "M@Th",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "build:local": "NODE_ENV=local nest build",
        "build:prod": "NODE_ENV=production nest build",
        "format": "prettier --write .",
        "start": "nest start",
        "start:local": "NODE_ENV=local nest start --watch",
        "start:prod": "NODE_ENV=production node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "db:init": "node dist/database/index.js -i",
        "db:setup": "node dist/database/index.js -i -m -s",
        "db:migrate": "node dist/database/index.js -m",
        "db:init:local": "npm run build:local && NODE_ENV=local node dist/database/index.js -i",
        "db:setup:local": "npm run build:local && NODE_ENV=local node dist/database/index.js -i -m -s",
        "db:migrate:local": "npm run build:local && NODE_ENV=local node dist/database/index.js -m",
        "rename:s3": "npx ts-node -r tsconfig-paths/register scripts/rename-s3-objects.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.922.0",
        "@aws-sdk/client-secrets-manager": "^3.872.0",
        "@aws-sdk/client-sns": "^3.679.0",
        "@aws-sdk/s3-request-presigner": "^3.922.0",
        "@nestjs/common": "^11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.6",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/serve-static": "^5.0.4",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/typeorm": "^11.0.0",
        "axios": "1.12.0",
        "bcrypt": "^6.0.0",
        "cheerio": "^1.1.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "date-fns": "^4.1.0",
        "joi": "^18.0.1",
        "nest-winston": "^1.10.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "sharp": "^0.34.4",
        "tunnel-ssh": "^5.2.0",
        "typeorm": "^0.3.26",
        "typeorm-naming-strategies": "^4.1.0",
        "uuid": "^11.1.0",
        "winston": "^3.17.0",
        "winston-cloudwatch": "^6.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.7",
        "@nestjs/testing": "^11.1.6",
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^5.0.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.17.2",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "esbuild": "^0.25.9",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-loader": "^9.5.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "volta": {
        "node": "22.2.0"
    }
}
